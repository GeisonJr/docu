{
	"preset": "ts-jest",
	"testEnvironment": "node",
	"transform": {
		"^.+\\.ts$": "ts-jest"
	},
	"transformIgnorePatterns": ["<rootDir>/node_modules/"],
	"moduleNameMapper": {
		"^@components/(.*)$": "<rootDir>/components/$1",
		"^@pages/(.*)$": "<rootDir>/pages/$1",
		"^@styles/(.*)$": "<rootDir>/styles/$1",
		"^@types/(.*)$": "<rootDir>/types/$1"
	}
}
